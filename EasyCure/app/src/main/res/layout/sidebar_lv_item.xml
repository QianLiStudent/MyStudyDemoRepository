<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/h50"
    android:paddingTop="@dimen/h5">

        <ImageView
            android:id="@+id/sidebar_lv_item_iv"
            android:layout_width="@dimen/w30"
            android:layout_height="@dimen/h30"
            android:layout_marginLeft="@dimen/w35"
            android:layout_centerVertical="true"
            ></ImageView>

        <TextView
            android:id="@+id/sidebar_lv_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where"
            android:textSize="@dimen/h12"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w15"
            android:layout_toRightOf="@id/sidebar_lv_item_iv"
            ></TextView>
    <View
        android:layout_width="@dimen/w25"
        android:layout_height="@dimen/h3"
        android:background="#4e83e3"
        android:layout_alignParentBottom="true"
        ></View>

</RelativeLayout>